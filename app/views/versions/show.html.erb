<%- model_class = @version.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<p>
  <strong><%= model_class.human_attribute_name(:content) %>:</strong><br>
  <%= @version.content %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:section_id) %>:</strong><br>
  <%= @version.section_id %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:user_id) %>:</strong><br>
  <%= @version.user_id %>
</p>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              versions_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_version_path(@version), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              version_path(@version),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
